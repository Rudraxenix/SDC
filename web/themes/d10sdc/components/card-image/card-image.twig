<div class="w-full sm:w-1/3 p-3">
	<div class="border border-slate-100 border-solid rounded-lg overflow-hidden">
		<div class="image-text-wrapper">
			<div class="w-full h-auto">{{ image }}</div>
			<div class="text-outer p-5">
				<div class="text-inner">
					<div class="[&_a]:text-base [&_a]:uppercase [&_a]:text-slate-400 [&_a]:no-underline [&_a]:hover:text-[#a82e30] [&_a]:font-normal">
						{{ category }}
					</div>
					<div class="w-full pt-3">
						<h2 class="font-semibold text-2xl">{{ heading }}</h2>
					</div>
					<div class="[&_p]:text-base py-5">
						{{ description }}
					</div>
					<div class="[&_a]:hover:text-[#a82e30] [&_a]:text-[#706cf2] [&_a]:text-base [&_a]:block">
						{{ ctaButton }}
					</div>
				</div>	
			</div>
		</div>
	</div>
</div>